<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClientOrders.Views.Items.ItemDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ClientOrders.ViewModels.Items"
    Title="Item details">
    <ContentPage.BindingContext>
        <vm:ItemDetailViewModel />
    </ContentPage.BindingContext>
    <StackLayout Style="{x:StaticResource FormStack}">
        <Label FontSize="Medium" Text="Text:" />
        <Label FontSize="Small" Text="{Binding Name}" />
        <Label FontSize="Medium" Text="Description" />
        <Label FontSize="Small" Text="{Binding Description}" />
    </StackLayout>
</ContentPage>