<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClientOrders.Views.Workers.WorkerDetailPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ClientOrders.ViewModels.Workers"
    Title="Worker details">
    <ContentPage.BindingContext>
        <vm:WorkerDetailViewModel />
    </ContentPage.BindingContext>
    <StackLayout Padding="15" Spacing="20">
        <Label FontSize="Medium" Text="Text:" />
        <Label FontSize="Small" Text="{Binding Name}" />
        <Label FontSize="Medium" Text="Description:" />
        <Label FontSize="Small" Text="{Binding Description}" />
    </StackLayout>
</ContentPage>