<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="ClientOrders.Views.Workers.NewWorkerPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:ClientOrders.ViewModels.Workers"
    Title="Add Worker">
    <ContentPage.BindingContext>
        <vm:NewWorkerViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <StackLayout>
            <Frame>
                <StackLayout Style="{x:StaticResource FormStack}">
                    <Label FontSize="Medium" Text="First Name" />
                    <Entry FontSize="Medium" Placeholder="Text" Text="{Binding FirstName, Mode=TwoWay}" />
                    <Label FontSize="Medium" Text="Last Name" />
                    <Entry FontSize="Medium" Placeholder="Text" Text="{Binding LastName, Mode=TwoWay}" />
                    <StackLayout Style="{x:StaticResource SaveStack}">
                        <Button
                            Command="{Binding SaveCommand}"
                            HorizontalOptions="Center"
                            Text="Save" />
                    </StackLayout>
                </StackLayout>
            </Frame>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>